                toothLoss: "âŒ KayÄ±p DiÅŸ SayÄ±sÄ±",
                analyze: "ğŸ” Analiz BaÅŸlat",
                stage: "ğŸ¯ Evre",
                grade: "ğŸ“Š Derece",
                treatmentPlan: "ğŸ’Š Tedavi ProtokolÃ¼",
                criteria: {
                    furcation: ["Yok", "SÄ±nÄ±f I", "SÄ±nÄ±f II", "SÄ±nÄ±f III"],
                    mobility: ["Yok", "Derece I", "Derece II", "Derece III"],
                    smoking: ["Yok", "<10 adet", "â‰¥10 adet"]
